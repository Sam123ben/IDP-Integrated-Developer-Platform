terraform {
  backend "azurerm" {
    resource_group_name  = "{{ .ResourceGroupName }}"
    storage_account_name = "{{ .StorageAccountName }}"
    container_name       = "{{ .ContainerName }}"
    key                  = "{{ .Key }}"
    {{- if .UseOIDC }}
    use_oidc             = true
    client_id            = "{{ .ClientID }}"
    subscription_id      = "{{ .SubscriptionID }}"
    tenant_id            = "{{ .TenantID }}"
    {{- end }}
  }
}