{
    "terraform_version": "1.0.0",
    "providers": [
        {
            "name": "azurerm",
            "source": "hashicorp/azurerm",
            "version": "~> 4.10.0",
            "auth_variables": {
                "client_id": "000000-0000-0000-0000-000000000000",
                "client_secret": "000000-0000-0000-0000-000000000000",
                "subscription_id": "000000-0000-0000-0000-000000000000",
                "tenant_id": "000000-0000-0000-0000-000000000000"
            }
        }
    ],
    "backend": {
        "resource_group_name": "rg-terraform-acme-prod",
        "storage_account_name": "stterraformacmeprod",
        "container_name": "tfstate",
        "key": "example_module/terraform.tfstate"
    },
    "modules": [
        {
            "module_name": "example_module",
            "source": "./modules/example_module",
            "variables": {
                "variable1": "value1",
                "variable2": "value2"
            }
        }
    ],
    "variables": {
        "region": {
            "value": "eastus",
            "type": "string",
            "description": "The deployment region",
            "sensitive": false
        },
        "environment": {
            "value": "prod",
            "type": "string",
            "description": "The deployment environment",
            "sensitive": false
        },
        "customer_name": {
            "value": "customer01",
            "type": "string",
            "description": "The name of the customer",
            "sensitive": false
        },
        "extra_variable": {
            "value": "some_value",
            "type": "string",
            "description": "An additional variable for testing",
            "sensitive": false
        }
    }
}